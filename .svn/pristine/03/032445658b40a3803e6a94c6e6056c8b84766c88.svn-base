<div class="modal register" ng-controller="registerCtrl">
    <ion-header-bar class="bar bar-header ibarColor" ng-style="registerStyle">
        <button class="button button-clear ion-ios7-arrow-back" ng-click="iregister.hide()">
        </button>
        <h1 class="title">用户注册</h1>
    </ion-header-bar>
    <ion-content>
        <div class="list list-inset">
            <label class="item item-input iLabel">
                <i class="icon-mobile-phone placeholder-icon" ng-style="registerPhone" style="margin-top:4px; margin-left: 6px;font-size: 32px;"></i>
                <input type="text" placeholder="手机号码"  style="margin-left: 4px;font-size: 16px;" ng-model="register.rPhone" ng-focus="rphoneFocus()" ng-blur="rphoneBlur()" />
            </label>
        </div>
        <div class="list list-inset">
            <label class="item item-input iLabel">
                <i class="icon-lock dark placeholder-icon" ng-style="registerPass" style="margin-top:4px; margin-left: 3px;"></i>
                <input type="password" placeholder="密 码" style="margin-left: 4px;font-size: 16px;" ng-model="register.rPass" ng-focus="rpassFocus()" ng-blur="rpassBlur()"/>
            </label>
        </div>

        <div class="list list-inset">
            <label class="item item-input iLabel">
                <i class=" icon-lock placeholder-icon" ng-style="registerPassC" style="margin-top:4px; margin-left: 3px;"></i>
                <input type="password" placeholder="密码确认" style="margin-left: 4px;font-size: 16px;" ng-model="register.rPassC" ng-focus="rpasscFocus()" ng-blur="rpasscBlur()"/>
            </label>
        </div>

        <div class="list list-inset">
            <label class="item item-input iLabel">
                <i class=" icon-credit-card placeholder-icon" ng-style="registerName" style="margin-top:8px; font-size: 24px;"></i>
                <input type="text" placeholder="姓 名" style="margin-left: 5px;font-size: 16px;" ng-model="register.rName"   ng-focus="rnameFocus()" ng-blur="rnameBlur()"/>
            </label>
        </div>
        <div class="list list-inset">
            <label class="item item-input iLabel">
                <i class="icon ion-card placeholder-icon" ng-style="registerCompany"></i>
                <input type="text" placeholder="商家名/公司名" style="margin-left: 5px;font-size: 16px;" ng-model="register.rCompany" ng-focus="rcompanyFocus()" ng-blur="rcompanyBlur()"/>
            </label>
        </div>

        <div class="row padding">
            <button class="button button-block button-positive" id="sendMessage" ng-click="registerSend()">提交注册信息</button>
        </div>
    </ion-content>
</div>
